# Environment Variables Example
# Copy to .env and fill with your values

# Database
DATABASE_URL=sqlite:///./lab_scanner.db
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@localhost:5432/lab_scanner

# API Configuration
API_TITLE=Lab Scanner API
API_VERSION=1.0.0
LOG_LEVEL=INFO

# Scanning defaults
DEFAULT_THREADS=100
DEFAULT_TIMEOUT=2
DEFAULT_PORT_RANGE=1-1024

# Server
HOST=0.0.0.0
PORT=8000

# Dashboard
FLASK_ENV=development
API_URL=http://localhost:8000/api
